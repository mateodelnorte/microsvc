#!/usr/bin/env node

const name = "service <SERVICE_NAME>";
const description =
  "creates a new service with example handlers and api exposed";
const usage = `\n  usage:\n\n    ${name} - ${description}\n`;

if (module.parent) {
  module.exports.name = name;
  module.exports.description = description;
  return;
}

if (!process.argv[2] || process.argv[2] === "--help") return console.log(usage);

const serviceName =
  process.argv[2] === "service" ? process.argv[3] : process.argv[2];

const createService = require("../lib/createService");

console.log(`creating new microsvc \'${serviceName}\'...`);

createService(serviceName)
  .then(() => {
    console.log(`finished creating new microsvc \'${serviceName}\'...`);
    console.log(
      `type 'cd ./${serviceName} && npm i && make run' to initialize and run`
    );
  })
  .catch(err => {
    console.error(err.message);
    process.exit(1);
  });
